@model StrateraPos.Models.Sale

@{
    ViewData["Title"] = "Receipt";
    Layout = null; // No layout for printing
    var settings = ViewBag.Settings as StrateraPOS_System.Models.BusinessSettings;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Receipt - @Model.ReceiptNumber</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        @@media print {
            .no-print {
                display: none !important;
            }

            body {
                margin: 0;
                padding: 20px;
            }
        }

        body {
            background-color: #f5f5f5;
        }

        .receipt-container {
            max-width: 800px;
            margin: 20px auto;
            background: white;
            padding: 40px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .receipt-header {
            text-align: center;
            border-bottom: 2px solid #333;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

            .receipt-header h1 {
                font-size: 2rem;
                margin-bottom: 5px;
            }

        .receipt-info {
            margin-bottom: 30px;
        }

            .receipt-info .row {
                margin-bottom: 10px;
            }

        .items-table {
            margin-bottom: 30px;
        }

            .items-table th {
                background-color: #f8f9fa;
                font-weight: 600;
                padding: 12px 8px;
            }

            .items-table td {
                padding: 10px 8px;
            }

        .totals-section {
            border-top: 2px solid #333;
            padding-top: 20px;
        }

            .totals-section .row {
                margin-bottom: 8px;
            }

        .grand-total {
            font-size: 1.5rem;
            font-weight: bold;
            border-top: 2px solid #333;
            padding-top: 15px;
            margin-top: 15px;
        }

        .receipt-footer {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 2px dashed #ccc;
        }
    </style>
</head>
<body>
    <div class="receipt-container">
        <!-- Header -->
        <div class="receipt-header">
            <h1>@(settings?.BusinessName ?? "Stratera POS")</h1>
            <p class="mb-1">Sales Receipt</p>
        </div>

        <!-- Receipt Info -->
        <div class="receipt-info">
            <div class="row">
                <div class="col-6">
                    <strong>Receipt Number:</strong><br>
                    @Model.ReceiptNumber
                </div>
                <div class="col-6 text-end">
                    <strong>Date & Time:</strong><br>
                    @Model.Date.ToString("MMM dd, yyyy hh:mm tt")
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    <strong>Payment Method:</strong><br>
                    @Model.PaymentMethod
                </div>
                <div class="col-6 text-end">
                    <strong>Cashier:</strong><br>
                    @(Model.User?.Username ?? "Admin")
                </div>
            </div>
            @if (!string.IsNullOrEmpty(Model.CustomerContact))
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <strong>Customer Contact:</strong><br>
                        @Model.CustomerContact
                    </div>
                </div>
            }
        </div>

        <!-- Items Table -->
        <div class="items-table">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Item</th>
                        <th class="text-center" style="width: 100px;">Qty</th>
                        <th class="text-end" style="width: 120px;">Price</th>
                        <th class="text-end" style="width: 120px;">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">@(settings?.CurrencySymbol ?? "₵")@item.UnitPrice.ToString("N2")</td>
                            <td class="text-end">@(settings?.CurrencySymbol ?? "₵")@item.Total.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Totals Section -->
        <div class="totals-section">
            <div class="row">
                <div class="col-6 text-end">
                    <strong>Subtotal:</strong>
                </div>
                <div class="col-6 text-end">
                    @(settings?.CurrencySymbol ?? "₵")@Model.SubTotal.ToString("N2")
                </div>
            </div>

            @if (Model.Discount > 0)
            {
                <div class="row">
                    <div class="col-6 text-end">
                        <strong>Discount:</strong>
                    </div>
                    <div class="col-6 text-end text-danger">
                        -@(settings?.CurrencySymbol ?? "₵")@Model.Discount.ToString("N2")
                    </div>
                </div>
            }

            @if (Model.Tax > 0)
            {
                <div class="row">
                    <div class="col-6 text-end">
                        <strong>Tax (@(settings?.TaxPercentage ?? 0)%):</strong>
                    </div>
                    <div class="col-6 text-end">
                        @(settings?.CurrencySymbol ?? "₵")@Model.Tax.ToString("N2")
                    </div>
                </div>
            }

            @if (Model.ServiceCharge > 0)
            {
                <div class="row">
                    <div class="col-6 text-end">
                        <strong>Service Charge (@(settings?.ServiceChargePercentage ?? 0)%):</strong>
                    </div>
                    <div class="col-6 text-end">
                        @(settings?.CurrencySymbol ?? "₵")@Model.ServiceCharge.ToString("N2")
                    </div>
                </div>
            }

            <div class="row grand-total">
                <div class="col-6 text-end">
                    <strong>GRAND TOTAL:</strong>
                </div>
                <div class="col-6 text-end text-success">
                    <strong>@(settings?.CurrencySymbol ?? "₵")@Model.GrandTotal.ToString("N2")</strong>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="receipt-footer">
            <p class="mb-2"><strong>Thank you for your business!</strong></p>
            <p class="text-muted small mb-0">
                Total Items: @Model.TotalItems |
                Products: @Model.TotalProducts
            </p>
            <p class="text-muted small mt-3 mb-0">Powered by Stratera POS</p>
        </div>

        <!-- Action Buttons (Hidden when printing) -->
        <div class="no-print mt-4 text-center">
            <button onclick="window.print()" class="btn btn-primary btn-lg me-2">
                <i class="bi bi-printer"></i> Print Receipt
            </button>
            <a asp-action="Index" class="btn btn-success btn-lg me-2">
                <i class="bi bi-cart4"></i> New Sale
            </a>
            <a asp-action="History" class="btn btn-secondary btn-lg">
                <i class="bi bi-clock-history"></i> Sales History
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>