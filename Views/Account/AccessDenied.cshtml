@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">
                    <i class="bi bi-shield-exclamation text-danger" style="font-size: 5rem;"></i>
                    <h2 class="mt-4 text-danger">Access Denied</h2>
                    <p class="text-muted mt-3">
                        You do not have permission to access this page.
                    </p>
                    <p class="text-muted">
                        This area is restricted to authorized users only.
                    </p>

                    <div class="mt-4">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-primary me-2">
                            <i class="bi bi-house-door"></i> Go to Home
                        </a>
                        <a asp-action="Logout" asp-controller="Account" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>

                    <div class="mt-4">
                        <small class="text-muted">
                            If you believe this is an error, please contact your administrator.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>