@model StrateraPOS_System.Models.DashboardViewModel
@using System.Linq

@{
    ViewData["Title"] = "Dashboard";
    var currencySymbol = ViewBag.CurrencySymbol ?? "₵";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
        <p class="text-muted mb-0">Welcome back! Here's what's happening with your store today.</p>
    </div>
    <div class="text-end">
        <small class="text-muted d-block">@DateTime.Now.ToString("MMMM dd, yyyy")</small>
        <small class="text-muted">@DateTime.Now.ToString("hh:mm tt")</small>
    </div>
</div>

<!-- Today's Performance -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="card-title mb-0 text-white-50">Today's Sales</h6>
                    <i class="bi bi-cash-stack fs-1 opacity-50"></i>
                </div>
                <h2 class="mb-2">@currencySymbol@Model.TodayRevenue.ToString("N2")</h2>
                <div class="d-flex align-items-center">
                    @if (Model.RevenueChangePercent > 0)
                    {
                        <span class="badge bg-success me-2">
                            <i class="bi bi-arrow-up"></i> @Model.RevenueChangePercent.ToString("N1")%
                        </span>
                        <small class="text-white-50">vs yesterday</small>
                    }
                    else if (Model.RevenueChangePercent < 0)
                    {
                        <span class="badge bg-danger me-2">
                            <i class="bi bi-arrow-down"></i> @Math.Abs(Model.RevenueChangePercent).ToString("N1")%
                        </span>
                        <small class="text-white-50">vs yesterday</small>
                    }
                    else
                    {
                        <span class="badge bg-secondary me-2">No change</span>
                        <small class="text-white-50">vs yesterday</small>
                    }
                </div>
                <hr class="my-2 opacity-25" />
                <small class="text-white-50">@Model.TodaySalesCount transactions today</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="card-title mb-0 text-white-50">Total Products</h6>
                    <i class="bi bi-box-seam fs-1 opacity-50"></i>
                </div>
                <h2 class="mb-2">@Model.TotalProducts</h2>
                <div class="text-white-50 small">
                    <span class="badge bg-warning text-dark me-1">@Model.LowStockCount</span> Low Stock
                    <span class="mx-2">|</span>
                    <span class="badge bg-danger me-1">@Model.OutOfStockCount</span> Out of Stock
                </div>
                <hr class="my-2 opacity-25" />
                <small class="text-white-50">@Model.TotalCategories categories</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="card-title mb-0 text-dark">Week's Revenue</h6>
                    <i class="bi bi-graph-up fs-1 opacity-50"></i>
                </div>
                <h2 class="mb-2 text-dark">@currencySymbol@Model.WeekRevenue.ToString("N2")</h2>
                <div class="text-dark small opacity-75">
                    @Model.WeekSalesCount transactions this week
                </div>
                <hr class="my-2 opacity-25" />
                <small class="text-dark opacity-75">Starting @DateTime.Today.AddDays(-(int)DateTime.Today.DayOfWeek).ToString("MMM dd")</small>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info h-100">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="card-title mb-0 text-white-50">Month's Revenue</h6>
                    <i class="bi bi-calendar-month fs-1 opacity-50"></i>
                </div>
                <h2 class="mb-2">@currencySymbol@Model.MonthRevenue.ToString("N2")</h2>
                <div class="text-white-50 small">
                    @Model.MonthSalesCount transactions this month
                </div>
                <hr class="my-2 opacity-25" />
                <small class="text-white-50">@DateTime.Now.ToString("MMMM yyyy")</small>
            </div>
        </div>
    </div>
</div>

<!-- Charts Row -->
<div class="row g-3 mb-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-graph-up text-primary"></i> Sales Trend (Last 7 Days)</h5>
            </div>
            <div class="card-body">
                <canvas id="salesTrendChart" height="80"></canvas>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-star text-warning"></i> Top 5 Products</h5>
            </div>
            <div class="card-body">
                @if (Model.TopProducts != null && Model.TopProducts.Count > 0)
                {
                    <canvas id="topProductsChart" height="200"></canvas>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <p class="text-muted mt-2">No sales data yet</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Recent Sales & Low Stock -->
<div class="row g-3 mb-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-receipt text-success"></i> Recent Sales</h5>
                <a href="@Url.Action("History", "Sales")" class="btn btn-sm btn-outline-primary">View All</a>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentSales != null && Model.RecentSales.Count > 0)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Receipt #</th>
                                    <th>Date & Time</th>
                                    <th>Items</th>
                                    <th>Payment</th>
                                    <th class="text-end">Amount</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var sale in Model.RecentSales)
                                {
                                    <tr>
                                        <td><strong>@sale.ReceiptNumber</strong></td>
                                        <td>
                                            <small>
                                                @sale.Date.ToString("MMM dd, yyyy")<br />
                                                <span class="text-muted">@sale.Date.ToString("hh:mm tt")</span>
                                            </small>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@sale.ItemCount item(s)</span>
                                        </td>
                                        <td>
                                            @if (sale.PaymentMethod == "Cash")
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-cash"></i> Cash
                                                </span>
                                            }
                                            else if (sale.PaymentMethod == "Card")
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-credit-card"></i> Card
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-primary">
                                                    <i class="bi bi-phone"></i> @sale.PaymentMethod
                                                </span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <strong>@currencySymbol@sale.GrandTotal.ToString("N2")</strong>
                                        </td>
                                        <td class="text-end">
                                            <a href="@Url.Action("Receipt", "Sales", new { id = sale.Id })" class="btn btn-sm btn-outline-info" title="View Receipt">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-receipt display-4 text-muted"></i>
                        <p class="text-muted mt-2">No recent sales</p>
                        <a href="@Url.Action("Index", "Sales")" class="btn btn-primary">
                            <i class="bi bi-cart4"></i> Start Selling
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle text-warning"></i> Low Stock Alerts</h5>
                @if (Model.LowStockCount > 0)
                {
                    <span class="badge bg-danger">@Model.LowStockCount</span>
                }
            </div>
            <div class="card-body p-0">
                @if (Model.LowStockProducts != null && Model.LowStockProducts.Count > 0)
                {
                    <div class="list-group list-group-flush">
                        @foreach (var product in Model.LowStockProducts.Take(5))
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@product.Name</strong>
                                        <br />
                                        <small class="text-muted">Threshold: @product.LowStockThreshold</small>
                                    </div>
                                    <div>
                                        @if (product.Stock == 0)
                                        {
                                            <span class="badge bg-danger fs-6">
                                                OUT OF STOCK
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark fs-6">
                                                @product.Stock left
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    @if (Model.LowStockProducts.Count > 5)
                    {
                        <div class="card-footer bg-light text-center">
                            <a href="@Url.Action("Index", "Products")" class="text-decoration-none">
                                View all @Model.LowStockCount low stock items <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-check-circle display-4 text-success"></i>
                        <p class="text-muted mt-2">All products well stocked!</p>
                    </div>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="bi bi-lightning-charge text-primary"></i> Quick Actions</h5>
            </div>
            <div class="card-body d-grid gap-2">
                <a href="@Url.Action("Index", "Sales")" class="btn btn-primary btn-lg">
                    <i class="bi bi-calculator me-2"></i>Open POS
                </a>
                <a href="@Url.Action("Create", "Products")" class="btn btn-success">
                    <i class="bi bi-plus-circle me-2"></i>Add Product
                </a>
                <a href="@Url.Action("Index", "Reports")" class="btn btn-info">
                    <i class="bi bi-graph-up me-2"></i>View Reports
                </a>
                <a href="@Url.Action("Index", "Suppliers")" class="btn btn-warning">
                    <i class="bi bi-truck me-2"></i>Suppliers
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Recent Activity -->
@if (Model.RecentActivities != null && Model.RecentActivities.Count > 0)
{
    <div class="row g-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history text-info"></i> Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        @foreach (var activity in Model.RecentActivities.Take(5))
                        {
                            <div class="timeline-item mb-3">
                                <div class="d-flex">
                                    <div class="me-3">
                                        @if (activity.ActivityType == ActivityType.CreateSale)
                                        {
                                            <div class="rounded-circle bg-success text-white p-2">
                                                <i class="bi bi-cart-check"></i>
                                            </div>
                                        }
                                        else if (activity.ActivityType == ActivityType.CreateProduct)
                                        {
                                            <div class="rounded-circle bg-primary text-white p-2">
                                                <i class="bi bi-plus"></i>
                                            </div>
                                        }
                                        else if (activity.ActivityType == ActivityType.UpdateProduct)
                                        {
                                            <div class="rounded-circle bg-warning text-white p-2">
                                                <i class="bi bi-pencil"></i>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="rounded-circle bg-secondary text-white p-2">
                                                <i class="bi bi-gear"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="flex-grow-1">
                                        <p class="mb-1">@activity.Description</p>
                                        <small class="text-muted">
                                            <i class="bi bi-person"></i> @activity.UserName
                                            <span class="mx-2">•</span>
                                            <i class="bi bi-clock"></i> @activity.Timestamp.ToString("MMM dd, yyyy hh:mm tt")
                                        </small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
    // Store currency symbol properly to avoid HTML entity issues
    const currencySymbol = '@Html.Raw(ViewBag.CurrencySymbol ?? "₵")';
    const currencyCode = '@ViewBag.CurrencyCode';

    // Sales Trend Chart (Last 7 Days)
    const salesTrendCanvas = document.getElementById('salesTrendChart');
    if (salesTrendCanvas) {
        const salesTrendCtx = salesTrendCanvas.getContext('2d');

        const salesLabels = [@foreach(var item in Model.SalesTrendData) {
            <text>'@item.Date'@(Model.SalesTrendData.IndexOf(item) < Model.SalesTrendData.Count - 1 ? "," : "")</text>
                }
];
        const salesData = [@foreach(var item in Model.SalesTrendData) {
            <text>@item.Amount@(Model.SalesTrendData.IndexOf(item) < Model.SalesTrendData.Count - 1 ? "," : "")</text>
                }
];

        new Chart(salesTrendCtx, {
            type: 'line',
            data: {
                labels: salesLabels,
                datasets: [{
                    label: 'Sales (' + currencyCode + ')',
                    data: salesData,
                    borderColor: 'rgb(13, 110, 253)',
                    backgroundColor: 'rgba(13, 110, 253, 0.1)',
                    tension: 0.4,
                    fill: true,
                    pointBackgroundColor: 'rgb(13, 110, 253)',
                    pointBorderColor: '#fff',
                    pointBorderWidth: 2,
                    pointRadius: 5,
                    pointHoverRadius: 7
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        padding: 12,
                        displayColors: false,
                        callbacks: {
                            label: function(context) {
                                return currencySymbol + context.parsed.y.toFixed(2);
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return currencySymbol + value.toFixed(0);
                            }
                        }
                    }
                }
            }
        });
    }

    // Top Products Chart
    const topProductsCanvas = document.getElementById('topProductsChart');
    @if (Model.TopProducts != null && Model.TopProducts.Count > 0)
    {
            <text>
            if (topProductsCanvas) {
                const topProductsCtx = topProductsCanvas.getContext('2d');

                const productLabels = [@foreach(var item in Model.TopProducts) {
                    <text>'@item.ProductName'@(Model.TopProducts.IndexOf(item) < Model.TopProducts.Count - 1 ? "," : "")</text>
            }
];
            const productData = [@foreach(var item in Model.TopProducts) {
                <text>@item.TotalQuantity@(Model.TopProducts.IndexOf(item) < Model.TopProducts.Count - 1 ? "," : "")</text>
                        }
];

            new Chart(topProductsCtx, {
                type: 'bar',
                data: {
                    labels: productLabels,
                    datasets: [{
                        label: 'Quantity Sold',
                        data: productData,
                        backgroundColor: [
                            'rgba(255, 193, 7, 0.8)',
                            'rgba(13, 202, 240, 0.8)',
                            'rgba(25, 135, 84, 0.8)',
                            'rgba(220, 53, 69, 0.8)',
                            'rgba(13, 110, 253, 0.8)'
                        ],
                        borderColor: [
                            'rgb(255, 193, 7)',
                            'rgb(13, 202, 240)',
                            'rgb(25, 135, 84)',
                            'rgb(220, 53, 69)',
                            'rgb(13, 110, 253)'
                        ],
                        borderWidth: 2,
                        borderRadius: 5
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            displayColors: false
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            ticks: {
                                precision: 0
                            }
                        }
                    }
                }
            });
        }
        </text>
        }
</script>