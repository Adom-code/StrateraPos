@model IEnumerable<StrateraPos.Models.Product>

@{
    ViewData["Title"] = "Stock Report";
    var settings = ViewBag.Settings as StrateraPOS_System.Models.BusinessSettings;
    var currencySymbol = settings?.CurrencySymbol ?? "₵";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-box-seam"></i> Inventory Stock Report</h2>
    <div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Reports
        </a>
        <button class="btn btn-success" onclick="window.location.href='/Reports/ExportInventoryCSV'">
            <i class="bi bi-file-earmark-spreadsheet"></i> Export to CSV
        </button>
        <button class="btn btn-primary" onclick="window.print()">
            <i class="bi bi-printer"></i> Print
        </button>
    </div>
</div>

<!-- Filter Options -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Filter by Stock Status</label>
                <select name="filter" class="form-select" onchange="this.form.submit()">
                    <!option value="all" @(ViewBag.Filter == "all" ? "selected" : "")>All Products</!option>
                    <!option value="instock" @(ViewBag.Filter == "instock" ? "selected" : "")>In Stock (Above Threshold)</!option>
                    <!option value="lowstock" @(ViewBag.Filter == "lowstock" ? "selected" : "")>Low Stock (At or Below Threshold)</!option>
                    <!option value="outofstock" @(ViewBag.Filter == "outofstock" ? "selected" : "")>Out of Stock (0)</!option>
                </select>
            </div>
            <div class="col-md-8">
                <div class="row g-2">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body text-center py-2">
                                <h5 class="mb-0">@Model.Count()</h5>
                                <small class="text-muted">Products Found</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center py-2">
                                <h5 class="mb-0">@currencySymbol@ViewBag.TotalValue.ToString("N2")</h5>
                                <small>Total Stock Value</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Stock Statistics Cards -->
<div class="row mb-4">
    @{
        var totalStock = Model.Sum(p => p.Stock);
        var lowStockCount = Model.Count(p => p.Stock > 0 && p.Stock <= p.LowStockThreshold);
        var outOfStockCount = Model.Count(p => p.Stock == 0);
        var inStockCount = Model.Count(p => p.Stock > p.LowStockThreshold);
    }

    <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-start border-success border-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small">In Stock</p>
                        <h4 class="mb-0 text-success">@inStockCount</h4>
                        <small class="text-muted">Products</small>
                    </div>
                    <i class="bi bi-check-circle text-success" style="font-size: 2rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-start border-warning border-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small">Low Stock</p>
                        <h4 class="mb-0 text-warning">@lowStockCount</h4>
                        <small class="text-muted">Products</small>
                    </div>
                    <i class="bi bi-exclamation-circle text-warning" style="font-size: 2rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-start border-danger border-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small">Out of Stock</p>
                        <h4 class="mb-0 text-danger">@outOfStockCount</h4>
                        <small class="text-muted">Products</small>
                    </div>
                    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 2rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-3 mb-3">
        <div class="card shadow-sm border-start border-info border-4">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <p class="text-muted mb-1 small">Total Units</p>
                        <h4 class="mb-0 text-info">@totalStock.ToString("N0")</h4>
                        <small class="text-muted">In Inventory</small>
                    </div>
                    <i class="bi bi-boxes text-info" style="font-size: 2rem; opacity: 0.5;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stock Table -->
<div class="card shadow-sm">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Supplier</th>
                            <th class="text-end">Unit Price</th>
                            <th class="text-center">Stock</th>
                            <th class="text-center">Threshold</th>
                            <th class="text-end">Stock Value</th>
                            <th class="text-center">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            var stockValue = product.Price * product.Stock;
                            var statusClass = product.Stock == 0 ? "table-danger" :
                            product.Stock <= product.LowStockThreshold ? "table-warning" : "";

                            <tr class="@statusClass">
                                <td><strong>#@product.Id</strong></td>
                                <td>
                                    <strong>@product.Name</strong>
                                    @if (!string.IsNullOrEmpty(product.Description))
                                    {
                                        <br>
                                        <small class="text-muted">@product.Description.Substring(0, Math.Min(50, product.Description.Length))@(product.Description.Length > 50 ? "..." : "")</small>
                                    }
                                    @if (!string.IsNullOrEmpty(product.Barcode))
                                    {
                                        <br>
                                        <small class="text-muted"><i class="bi bi-upc-scan"></i> @product.Barcode</small>
                                    }
                                </td>
                                <td>
                                    @if (product.Category != null)
                                    {
                                        <span class="badge bg-info">@product.Category.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (product.Supplier != null)
                                    {
                                        <small>@product.Supplier.Name</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <strong class="text-success">@currencySymbol@product.Price.ToString("N2")</strong>
                                </td>
                                <td class="text-center">
                                    @if (product.Stock == 0)
                                    {
                                        <span class="badge bg-danger fs-6">@product.Stock</span>
                                    }
                                    else if (product.Stock <= product.LowStockThreshold)
                                    {
                                        <span class="badge bg-warning text-dark fs-6">@product.Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success fs-6">@product.Stock</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <small class="text-muted">@product.LowStockThreshold</small>
                                </td>
                                <td class="text-end">
                                    <strong>@currencySymbol@stockValue.ToString("N2")</strong>
                                </td>
                                <td class="text-center">
                                    @if (product.Stock == 0)
                                    {
                                        <span class="badge bg-danger">
                                            <i class="bi bi-exclamation-triangle"></i> Out of Stock
                                        </span>
                                    }
                                    else if (product.Stock <= product.LowStockThreshold)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-circle"></i> Low Stock
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> In Stock
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-secondary">
                        <tr class="fw-bold">
                            <td colspan="7" class="text-end">TOTAL STOCK VALUE:</td>
                            <td class="text-end">@currencySymbol@ViewBag.TotalValue.ToString("N2")</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #dee2e6;"></i>
                <h4 class="mt-3 text-muted">No Products Found</h4>
                <p class="text-muted">
                    @if (ViewBag.Filter != "all")
                    {
                        <text>No products match the selected filter</text>
                    }
                    else
                    {
                        <text>No products in inventory</text>
                    }
                </p>
                <a asp-controller="Products" asp-action="Create" class="btn btn-success mt-2">
                    <i class="bi bi-plus-circle"></i> Add Product
                </a>
            </div>
        }
    </div>
</div>

<style>
    @@media print {
        .btn, .card-header {
            display: none !important;
        }

        .card {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>