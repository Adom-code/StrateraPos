@model IEnumerable<StrateraPos.Models.Product>

@{
    ViewData["Title"] = "Products";
    var categories = ViewBag.Categories as List<StrateraPos.Models.Category>;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-box-seam"></i> Product Management</h2>
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="bi bi-plus-circle"></i> Add New Product
    </a>
</div>

<!-- Toast Notifications -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <strong>Success!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>Error!</strong> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-circle-fill me-2"></i>
        <strong>Warning!</strong> @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<!-- Search and Filter -->
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" class="form-control"
                           placeholder="Search by name or barcode..."
                           value="@ViewBag.Search">
                </div>
            </div>
            <div class="col-md-4">
                <select name="categoryId" class="form-select">
                    <option value="">All Categories</option>
                    @if (categories != null)
                    {
                        @foreach (var cat in categories)
                        {
                            @if (ViewBag.CategoryId == cat.Id)
                            {
                                <option value="@cat.Id" selected>@cat.Name</option>
                            }
                            else
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="bi bi-funnel"></i> Filter
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Products Table -->
<div class="card shadow-sm">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Barcode</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Supplier</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr class="@(product.IsExpired ? "table-danger" : product.IsLowStock ? "table-warning" : "")">
                                <td><strong>#@product.Id</strong></td>
                                <td>
                                    <strong>@product.Name</strong>
                                    @if (!string.IsNullOrEmpty(product.Description))
                                    {
                                        <br>
                                        <small class="text-muted">@product.Description</small>
                                    }
                                    @if (product.IsExpired)
                                    {
                                        <br>
                                        <span class="badge bg-danger">
                                            <i class="bi bi-exclamation-triangle"></i> Expired
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.Barcode))
                                    {
                                        <code class="bg-light px-2 py-1 rounded">@product.Barcode</code>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (product.Category != null)
                                    {
                                        <span class="badge bg-info">@product.Category.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <strong class="text-success">₵@product.Price.ToString("N2")</strong>
                                    @if (product.CostPrice > 0)
                                    {
                                        <br>
                                        <small class="text-muted">Cost: ₵@product.CostPrice.ToString("N2")</small>
                                    }
                                </td>
                                <td>
                                    @if (product.Stock == 0)
                                    {
                                        <span class="badge bg-danger">Out of Stock</span>
                                    }
                                    else if (product.Stock <= product.LowStockThreshold)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-exclamation-circle"></i> @product.Stock
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">@product.Stock</span>
                                    }
                                    @if (!string.IsNullOrEmpty(product.Unit))
                                    {
                                        <br>
                                        <small class="text-muted">@product.Unit</small>
                                    }
                                </td>
                                <td>
                                    @if (product.Supplier != null)
                                    {
                                        @product.Supplier.Name
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (product.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@product.Id"
                                           class="btn btn-sm btn-outline-primary"
                                           title="Edit Product">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button onclick="toggleStatus(@product.Id, '@Html.Raw(product.Name.Replace("'", "\\'"))')"
                                                class="btn btn-sm btn-outline-warning"
                                                title="Toggle Status">
                                            <i class="bi bi-toggle-on"></i>
                                        </button>
                                        <button onclick="deleteProduct(@product.Id, '@Html.Raw(product.Name.Replace("'", "\\'"))')"
                                                class="btn btn-sm btn-outline-danger"
                                                title="Delete Product">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Summary Stats -->
            <div class="row mt-3">
                <div class="col-md-3">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="mb-0">@Model.Count()</h5>
                            <small class="text-muted">Total Products</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body text-center">
                            <h5 class="mb-0">@Model.Count(p => p.IsActive)</h5>
                            <small>Active Products</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning">
                        <div class="card-body text-center">
                            <h5 class="mb-0">@Model.Count(p => p.IsLowStock)</h5>
                            <small>Low Stock Items</small>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-danger text-white">
                        <div class="card-body text-center">
                            <h5 class="mb-0">@Model.Count(p => p.Stock == 0)</h5>
                            <small>Out of Stock</small>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: #dee2e6;"></i>
                <h4 class="mt-3 text-muted">No Products Found</h4>
                <p class="text-muted">
                    @if (!string.IsNullOrEmpty(ViewBag.Search) || ViewBag.CategoryId > 0)
                    {
                        <text>Try adjusting your search or filter criteria</text>
                    }
                    else
                    {
                        <text>Start by adding your first product</text>
                    }
                </p>
                <a asp-action="Create" class="btn btn-success btn-lg mt-3">
                    <i class="bi bi-plus-circle"></i> Add Product
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Get anti-forgery token
        function getAntiForgeryToken() {
            return document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';
        }

        function toggleStatus(id, name) {
            if (!confirm(`Toggle status for "${name}"?`)) return;

            fetch('/Products/ToggleStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `id=${id}&__RequestVerificationToken=${encodeURIComponent(getAntiForgeryToken())}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast('success', data.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast('error', data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('error', 'An error occurred while toggling product status. Please try again.');
            });
        }

        function deleteProduct(id, name) {
            if (!confirm(`Are you sure you want to delete "${name}"?\n\nThis action cannot be undone.`)) return;

            fetch('/Products/Delete', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: `id=${id}&__RequestVerificationToken=${encodeURIComponent(getAntiForgeryToken())}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast('success', data.message);
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showToast('error', data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('error', 'An error occurred while deleting the product. Please try again.');
            });
        }

        function showToast(type, message) {
            const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
            const icon = type === 'success' ? 'bi-check-circle-fill' : 'bi-exclamation-triangle-fill';
            const title = type === 'success' ? 'Success!' : 'Error!';

            const toast = `
                <div class="alert ${alertClass} alert-dismissible fade show" role="alert">
                    <i class="bi ${icon} me-2"></i>
                    <strong>${title}</strong> ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            `;

            const container = document.querySelector('.container');
            container.insertAdjacentHTML('afterbegin', toast);

            // Auto-dismiss after 5 seconds
            setTimeout(() => {
                const alertElement = container.querySelector('.alert');
                if (alertElement) {
                    alertElement.classList.remove('show');
                    setTimeout(() => alertElement.remove(), 150);
                }
            }, 5000);
        }

        // Auto-dismiss alerts after 5 seconds
        document.addEventListener('DOMContentLoaded', function() {
            const alerts = document.querySelectorAll('.alert-dismissible');
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.classList.remove('show');
                    setTimeout(() => alert.remove(), 150);
                }, 5000);
            });
        });
    </script>

    <!-- Anti-forgery token for AJAX requests -->
    @Html.AntiForgeryToken()
}