@model IEnumerable<StrateraPos.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people"></i> User Management</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-person-plus"></i> Add New User
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Full Name</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Last Login</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <i class="bi bi-person-circle text-primary me-2"></i>
                                    <strong>@user.FullName</strong>
                                </td>
                                <td>@user.Username</td>
                                <td>@user.Email</td>
                                <td>
                                    <span class="badge bg-@(user.Role == StrateraPos.Models.UserRole.Admin ? "danger" : user.Role == StrateraPos.Models.UserRole.Manager ? "warning" : "info")">
                                        @user.Role
                                    </span>
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                    @if (user.LastLoginAt.HasValue)
                                    {
                                        <small>@user.LastLoginAt.Value.ToString("MMM dd, yyyy hh:mm tt")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Never</small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning" title="Edit User">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="ResetPassword" asp-route-id="@user.Id" class="btn btn-sm btn-secondary" title="Reset Password">
                                            <i class="bi bi-key"></i>
                                        </a>
                                        <form asp-action="ToggleStatus" asp-route-id="@user.Id" method="post" style="display: inline;">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-@(user.IsActive ? "secondary" : "success")" title="@(user.IsActive ? "Deactivate" : "Activate")">
                                                <i class="bi bi-@(user.IsActive ? "pause" : "play")-circle"></i>
                                            </button>
                                        </form>
                                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger" title="Delete User">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
                <p class="text-muted mt-3">No users found</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i> Add Your First User
                </a>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <div class="card">
        <div class="card-body">
            <h5><i class="bi bi-info-circle text-info"></i> User Management Tips</h5>
            <ul class="mb-0">
                <li><strong>Admin:</strong> Full system access, can manage users and settings</li>
                <li><strong>Manager:</strong> Can view reports and manage inventory</li>
                <li><strong>Cashier:</strong> Can process sales and basic operations</li>
                <li>Deactivating a user prevents login without deleting their account</li>
                <li>Use "Reset Password" to set a new password for users who forgot theirs</li>
            </ul>
        </div>
    </div>
</div>