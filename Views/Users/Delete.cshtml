@model StrateraPos.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-danger"><i class="bi bi-trash"></i> Delete User</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>

        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5 class="alert-heading">
                        <i class="bi bi-exclamation-octagon me-2"></i>
                        Warning: This action cannot be undone!
                    </h5>
                    <p class="mb-0">
                        You are about to delete the user account. This is a soft delete, meaning the user data will be marked as deleted but retained in the database for audit purposes.
                    </p>
                </div>

                <h5 class="mb-3">User Information:</h5>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Full Name:</dt>
                            <dd class="col-sm-7">
                                <strong>@Model.FullName</strong>
                            </dd>

                            <dt class="col-sm-5">Username:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-secondary">@Model.Username</span>
                            </dd>

                            <dt class="col-sm-5">Email:</dt>
                            <dd class="col-sm-7">@Model.Email</dd>

                            <dt class="col-sm-5">Phone:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrWhiteSpace(Model.PhoneNumber))
                                {
                                    <text>@Model.PhoneNumber</text>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Role:</dt>
                            <dd class="col-sm-7">
                                @if (Model.Role == StrateraPos.Models.UserRole.Admin)
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-shield-fill-check"></i> Administrator
                                    </span>
                                }
                                else if (Model.Role == StrateraPos.Models.UserRole.Manager)
                                {
                                    <span class="badge bg-warning">
                                        <i class="bi bi-person-badge"></i> Manager
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-person"></i> Cashier
                                    </span>
                                }
                            </dd>

                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle"></i> Inactive
                                    </span>
                                }
                            </dd>

                            <dt class="col-sm-5">Created Date:</dt>
                            <dd class="col-sm-7">
                                @Model.CreatedAt.ToString("MMM dd, yyyy")
                            </dd>

                            <dt class="col-sm-5">Last Login:</dt>
                            <dd class="col-sm-7">
                                @if (Model.LastLoginAt.HasValue)
                                {
                                    @Model.LastLoginAt.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="alert alert-warning">
                    <h6 class="alert-heading">
                        <i class="bi bi-info-circle me-2"></i>
                        What happens when you delete this user?
                    </h6>
                    <ul class="mb-0">
                        <li>The user account will be marked as deleted (soft delete)</li>
                        <li>The user will no longer be able to log in</li>
                        <li>The user will be hidden from the users list</li>
                        <li>All sales records associated with this user will remain intact</li>
                        <li>The user data will be retained for audit purposes</li>
                    </ul>
                </div>

                <hr />

                <form asp-action="Delete" method="post" id="deleteForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger btn-lg" id="deleteBtn">
                            <i class="bi bi-trash"></i> Yes, Delete User
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Safety Tips Card -->
        <div class="card mt-3">
            <div class="card-body">
                <h6><i class="bi bi-lightbulb text-warning"></i> Safety Tips</h6>
                <ul class="small mb-0">
                    <li>Consider <strong>deactivating</strong> the user instead if you might need to restore access later</li>
                    <li>Ensure all important work by this user has been completed or transferred</li>
                    <li>Review any pending transactions or tasks assigned to this user</li>
                    <li>You cannot delete your own account while logged in</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form submission with loading state
        document.getElementById('deleteForm').addEventListener('submit', function (e) {
            if (!confirm('Are you absolutely sure you want to delete this user? This action will mark the account as deleted.')) {
                e.preventDefault();
                return false;
            }

            const deleteBtn = document.getElementById('deleteBtn');
            deleteBtn.disabled = true;
            deleteBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Deleting...';
        });
    </script>
}